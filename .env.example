# Database
DATABASE_URL="postgresql://zeru:zeru@localhost:5437/zeru?schema=public"

# Redis
REDIS_URL="redis://localhost:6380"

# Auth
JWT_SECRET="change-me-in-production"
JWT_EXPIRATION="7d"

# AI - 32 bytes hex (64 chars) for AES-256 encryption of API keys
ENCRYPTION_KEY="generate-a-random-64-char-hex-string-for-production"

# App
API_PORT=3017
WEB_PORT=3027
NODE_ENV=development
CORS_ORIGIN=http://localhost:3027
NEXT_PUBLIC_API_URL=http://localhost:3017/api

# Register invite token — set a secret value and share /register?token=<value> to grant access
# Generate one with: openssl rand -hex 20
NEXT_PUBLIC_REGISTER_TOKEN="your-secret-token-here"

# AWS SES — System email (login codes, registration, platform notifications).
# Required for passwordless login to work. Tenant-configured SES (Settings > Email)
# is used only for tenant-specific alerts and notifications.
AWS_SES_REGION="us-east-1"
AWS_SES_ACCESS_KEY_ID=""
AWS_SES_SECRET_ACCESS_KEY=""
AWS_SES_FROM_EMAIL="noreply@zeru.cl"
